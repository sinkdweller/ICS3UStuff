
public class FactorialTable {

	public static void main(String[] args) {
		String factorialString = "1";
		int factorial = 1;
		
		for(int i=2, space=40, space2 = 40; i<=15; i++) {
			System.out.print(i);
			
			for (int b = 1; b<=space2; b++) {
				System.out.print(" ");	
				
			}
			
			
			factorialString += ("x" + i);
			factorial =factorial*i;
			
			System.out.print(factorialString);
			if (i <= 9) {
				space -=2;
				space2-=1;
			}
			else {
				space -=3;
				space2 -=2;
			}
			
			
			for (int b = 1; b<=space; b++) {
				System.out.print(" ");	
				
			}
			
			System.out.print(factorial);
			System.out.println("");
		}
	}

}
