
public class FactorialTable {

	public static void main(String[] args) {
		String factorialString = "1";
		int factorial = 1;
		
		for(int i=2, space=30; i<=15; i++, space-=2) {
			System.out.print(i);
			factorialString += ("x" + i);
			factorial =factorial*i;
			
			System.out.print(factorialString);
			for (int b = 1; b<=space; b++) {
				System.out.print(" ");	
			}
			
			System.out.print(space +factorial);
			System.out.println("");
		}
	}

}
